<div class="grid-products grid--view-items">
    <div class="row">
        {{#each products}}

        <div class="col-6 col-sm-6 col-md-4 col-lg-4 item">
            <!-- start product image -->
            <div class="product-image" style="">
                <!-- start product image -->


                <a href="product-details/{{this._id}}" class="product-img">
                    <!-- image -->
                    <img class="primary blur-up lazyload" data-src="/product-images/{{this._id}}first.jpg"
                        src="/product-images/{{this._id}}first.jpg" alt="" title="">
                    <!-- End image -->
                    <!-- Hover image -->
                    <img class="hover blur-up lazyload" data-src="/product-images/{{this._id}}first.jpg"
                        src="/product-images/{{this._id}}first.jpg" alt="" title="">
                    <!-- End hover image -->
                    <!-- product label -->

                    {{#if this.offer}}
                    <div class="product-labels"><span class="lbl on-sale">{{this.category}}</span>
                    </div>
                    {{/if}}
                    <!-- End product label -->

                    <!-- end product image -->


                    <!--Product Button-->
                    <div class="button-set style1">
                        <ul>
                            <li>
                                <!--Cart Button-->
                                <div class="btn-addto-cart">
                                    <button class="btn-icon btn btn-addto-cart add-to-cart" data-proid="{{this._id}}">
                                        <i class="icon anm anm-cart-l"></i>
                                        <span class="tooltip-label">Add to Cart</span>
                                    </button>
                                </div>
                                <!--end Cart Button-->
                            </li>
                            <li>

                            </li>
                            <li>
                                <!--Wishlist Button-->
                                <div class="wishlist-btn">
                                    <button class="btn-icon wishlist add-to-wishlist" data-proid="{{this._id}}">
                                        <i class="icon anm anm-heart-l"></i>
                                        <span class="tooltip-label">Add To Wishlist</span>
                                    </button>
                                </div>
                                <!--End Wishlist Button-->
                            </li>
                            <li>

                            </li>
                        </ul>
                    </div>
                    <!--End Product Button-->
            </div>
            <!-- end product image -->
            <!--start product details -->
            <div class="product-details text-center">
                <!-- product name -->
                <div class="product-name">
                    <a href="product-details/{{this._id}}">{{this.productTitle}}</a>
                </div>
                <!-- End product name -->
                <!-- product price -->
                {{#if this.offer}}
                <div class="product-price">
                    <span class="price"> <del class="disabled">Rs. {{this.oldPrice}}</del><b><span
                                style="margin-left: 10px;"> Rs. {{this.price}}</span> </b></span>
                </div>
                {{else}}
                <div class="product-price">
                    <span class="price"><b>Rs. {{this.price}}</b></span>
                </div>
                {{/if}}
                <!-- End product price -->

                <a href="/add-to-cart/{{this._id}}" class="btn btn-dark mt-3">Buy Now</a>

            </div>
            <!-- End product details -->
        </div>
        {{/each}}

    </div>


</div>
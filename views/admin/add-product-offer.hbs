<h1 style="text-align: center;">Add New Product Offer</h1>
<div class="card p-5 w-50 mx-auto">

    <div class="row">


        <div class="col-lg-12">
            {{#if already}}
                <div class="alert alert-danger">
                    {{already}}
                </div>
            {{/if}}
            <div class="mt-2">
               

                <div class="">
                    <form action="/admin/add-product-offer/{{proId}}" class="form-validation" method="post" id="addCoupons">
                        <div class="form-group">
                            <label for="discount">Discount in(%)<span class="text-danger">*</span></label>
                            <input type="text" name="discount" parsley-trigger="change"
                                placeholder="Enter Discount in percentage" class="form-control" id="discount">
                        </div>
                        <div class="form-group">
                            <label for="pass1">Validity Date<span class="text-danger">*</span></label>
                            <input id="today"  type="date" name="date" placeholder="dd/mm/yy " class="form-control">
                        </div>

                        <div class="form-group text-right mb-0">
                            <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                Add
                            </button>
                            <button type="reset" class="btn btn-danger waves-effect">
                                Cancel
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>


    </div>
</div>
 {{#if proOffer}}
<div class="co1-12 mt-3">
  <table class="table table-bordered mt-2 w-70 ">
    <thead>
      <tr>
        <th style="text-align: center;">Discount</th>
        <th style="text-align: center;">Validity Date</th>
        <th style="text-align: center;">Action</th>
      </tr>
    </thead>
    <tbody id="myTable">
        {{#each proOffer}}
      <tr>
        <td style="text-align: center;">{{this.discount}}%</td>
        <td style="text-align: center;">{{this.date}}</td>
        <td style="text-align: center;"> <a href="/admin/delete-product-offer/{{this.proId}}"><i class="fas fa-trash" style="font-size: 20px; color: red;"></i></a></td>
         </tr>
         {{/each}}
    </tbody>
  </table>
</div>
{{/if}}
<script>
    var date = new Date();
    var tdate = date.getDate();
    var month = date.getMonth()+1;
    if(tdate < 10){
        tdate = "0"+tdate;
    }
    if(month < 10){
        month = "0"+month;
    }

    var year = date.getFullYear();

    var minDate = year + "-" + month + "-" + tdate;
    document.getElementById("today").setAttribute('min', minDate)

</script>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Discount (%):</label>
            <input type="text" class="form-control" id="" name="discount">
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Expire Date:</label>
            <input type="date" class="form-control" id="" name="date">
          </div>
      <div class="modal-footer">
        <button type="submi" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
        </form>
      </div>
    </div>
  </div>
</div>

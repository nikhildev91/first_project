<div class="card p-3 mt-4">
  <h4>Add Home Page Main Banner</h4>

  <div class="row" style="justify-content: center;">

    <img src="" alt="" style="width: 300px; height:auto" id="imgview1" class="mt-3">
    <img src="" alt="" style="width: 300px; height:auto" id="imgview2" class="mt-3">
    <img src="" alt="" style="width: 300px; height:auto" id="imgview3" class="mt-3">
    <img src="" alt="" style="width: 300px; height:auto" id="imgview4" class="mt-3">

  </div>

  <form action="/admin/add-banner" method="post" enctype="multipart/form-data" id="add-Banner">
    <div class="row">
      <div id="image-box1" style="width: 400px; height: 250px; display: none;">
      </div>
      <div>
        <button class="btn btn-primary mt-2" type="button" style="display: none;" id="crop-btn1">Done</button>
      </div>
      <div class="mt-5 col-md-6">
        <label for="">First Banner Image</label>

        <input type="file" name="image1" id="file1" class="form-control mt-2" onchange="return cropBanner1()">
        <label for="" class="mt-3">First Banner Title</label>
        <input type="text" name="title1" class="form-control" placeholder="Enter Attracting Title">
      </div>
      <div class="mt-5 col-md-6">
        <label for="">Second Banner Image</label>

        <input type="file" name="image2" id="file2" class="form-control mt-2" onchange="return cropBanner2()">
        <label for="" class="mt-3">Second Banner Title</label>
        <input type="text" name="title2" class="form-control" placeholder="Enter Attracting Title">
      </div>
      <div class="mt-5 col-md-6">
        <label for="">Third Banner Image</label>

        <input type="file" name="image3" id="file3" class="form-control" onchange="return cropBanner3()">
        <label for="" class="mt-3">Third Banner Title</label>
        <input type="text" name="title3" class="form-control" placeholder="Enter Attracting Title">
      </div>
      <div class="mt-5 col-md-6">
        <label for="">Fourth Banner Image</label>

        <input type="file" name="image4" id="file4" class="form-control" onchange="return cropBanner4()">
        <label for="" class="mt-3">Fourth Banner Title</label>
        <input type="text" name="title4" class="form-control" placeholder="Enter Attracting Title">
      </div>

    </div>


</div>

<div class="form-group mt-5">

  <div class="col-md-8">
    <button type="reset" class="btn btn-danger waves-effect" style="float: right;">
      Cancel
    </button>

    <button type="submit" id="confirm-btn1" class="btn btn-primary waves-light mr-1" style="float: right;">
      Submit
    </button>

  </div>
</div>
</form>
</div>
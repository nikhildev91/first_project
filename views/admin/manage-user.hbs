<h1 style="text-align: center;">Manage Users</h1>


<div class="co1-12 mt-3">

  

  {{!-- <table class="table table-bordered mt-2" id="datatable-buttons"> --}}
    <table id="datatable-buttons1" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
   <thead>
      <tr>
        <th>Customer Name</th>
         <th>Username</th>
        <th>Email ID</th>
        <th>Phone No</th>
        <th>Action</th>
      
        
      </tr>
    </thead>
    <tbody id="myTable">
     {{#each userData}}
      <tr>
        <td>{{this.firstname}} {{this.lastname}}</td>
        <td>{{this.username}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td  style="text-align: center;">
          {{#if this.block}}
          <a href="/admin/unblock/{{this._id}}"><i class="fas fa-unlock" style="color: green;"></i></a>

          {{else}}

          <a href="/admin/block/{{this._id}}"> <i class="fas fa-ban" style="color: red;"></i></a>

          {{/if}}
        
          
          
          </td>
       
        
         </tr>
         {{/each}}
     
    </tbody>
  </table>
  

</div>